{
    "name": "react-query-hook-builder",
    "displayName": "React Query Hook Builder",
    "description": "A simple extension to help you create hooks that can be used inside your codebase",
    "publisher": "notTheRightGuy",
    "repository": {
        "type": "git",
        "url": "https://github.com/NotTheRightGuy/react-query-hook-maker"
    },
    "version": "0.0.3",
    "engines": {
        "vscode": "^1.107.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.generateHook",
                "title": "React Query Hook Builder: Generate Hook from specs"
            },
            {
                "command": "extension.generateHookFromOpenAPI",
                "title": "React Query Hook Builder: Generate Hook from OpenAPI Spec"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "yarn run check-types && yarn run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/command-line-args": "^5.2.3",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/readable-stream": "^4.0.23",
        "@types/urijs": "^1.19.26",
        "@types/vscode": "^1.107.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "esbuild": "^0.27.1",
        "eslint": "^9.39.1",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.1"
    },
    "dependencies": {
        "@types/json5": "^2.2.0",
        "json5": "^2.2.3",
        "quicktype-core": "^23.2.6",
        "strip-json-comments": "^5.0.3"
    }
}
